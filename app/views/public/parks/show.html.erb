<h1>Park Information</h1>

<table class="table table-bordered">
  <tbody>
    <tr>
      <th width="20%">公園名</th>
      <td width="80%"><%= @park.name %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= simple_format(@park.body) %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @park.address %></td>
    </tr>
    <tr>
      <th>地図</th>
      <td>
        <div id="map" data-latitude=<%= @park.latitude %> data-longitude=<%= @park.longitude %>></div>
      </td>
    </tr>
    <tr>
      <th>レビュー</th>
      <td>
        <div id="review"></div>
      </td>
    </tr>
  </tbody>
</table>

<% if user_signed_in? && current_user == @park.user %>
  <%= link_to "編集する", edit_park_path(@park), class: "btn btn-warning" , data: {turbolinks: "false"} %>
<% end %>

<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>

<script src="https://cdn.jsdelivr.net/npm/jquery-raty-js@2.8.0/lib/jquery.raty.min.js"></script>
<script>
  $('#review').raty({
    starOff: '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHarf : '<%= asset_path('star-half.png') %>',
    score: <%= @park.review %>,
    readOnly: true
  });
</script>