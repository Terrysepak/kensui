<%= form_with model: user do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="mb-2">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="text-center my-4">
    <%= f.submit submit, class: "btn btn-primary" %>
  </div>
<% end %>